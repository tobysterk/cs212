        <Button Content="Draw" Height="37" HorizontalAlignment="Left" Margin="48,269,0,0" Name="button1" VerticalAlignment="Top" Width="101" Click="button1_Click" />
        <Label Content="Plant Size" Height="28" Margin="66.5,61,501,0" Name="label1" VerticalAlignment="Top" />
        <Label Content="Sun Size" Height="28" HorizontalAlignment="Left" Margin="70,125,0,0" Name="label2" VerticalAlignment="Top" />
